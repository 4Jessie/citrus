<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">
	
	<bean id="royalAirlineHttpServer" class="com.consol.citrus.http.HttpServer">
        <property name="port" value="${http.port}"/>
        <property name="uri" value="${http.urlpath}"/>
        <property name="sendDestination" value="${royal.airline.request.queue}"/>
        <property name="replyDestination" value="${royal.airline.response.queue}"/>
        <property name="jmsTemplate">
            <bean class="org.springframework.jms.core.JmsTemplate">
                 <property name="connectionFactory" ref="defaultJmsConnectionFactory" />
                 <property name="receiveTimeout" value="2000"/>
            </bean>
        </property>
    </bean> 
	
	<bean id="receiveRoyalAirlineBookingRequest" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
        <property name="service">
            <bean parent="defaultJmsService">
                <property name="serviceDestination" value="${royal.airline.request.queue}"/>
            </bean>
        </property>
		<property name="validator">
			<bean class="com.consol.citrus.validation.DefaultXMLMessageValidator"/>
		</property>
        <property name="validateXmlSchemaSource" value="${xml.schema.flight.booking}"/>
	</bean>
	
	<bean id="sendRoyalAirlineBookingResponse" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
        <property name="service">
            <bean parent="defaultJmsService">
                <property name="serviceDestination" value="${royal.airline.response.queue}"/>
            </bean>
        </property>
    </bean>
	
</beans>