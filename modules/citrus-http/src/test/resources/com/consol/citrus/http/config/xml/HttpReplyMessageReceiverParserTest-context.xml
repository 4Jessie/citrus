<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:citrus-http="http://www.citrusframework.org/schema/http/config" 
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                            http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd">
    
    <citrus-http:reply-message-handler id="httpReplyMessageReceiver1"/>
    
    <citrus-http:reply-message-handler id="httpReplyMessageReceiver2"
                actor="testActor"/>
    
    <bean id="testActor" class="com.consol.citrus.TestActor">
        <property name="name" value="TESTACTOR"/>
    </bean>
</beans>