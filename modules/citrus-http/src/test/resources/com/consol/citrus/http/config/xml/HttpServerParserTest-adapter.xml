<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:citrus-http="http://www.citrusframework.org/schema/http/config"
        xmlns:util="http://www.springframework.org/schema/util"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd
                            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <citrus-http:server id="httpServer1"
                        auto-start="false"
                        port="8081">
      <citrus-http:channel-endpoint-adapter channel-name="serverChannel"
                                            polling-interval="250"
                                            timeout="10000"/>
    </citrus-http:server>

    <citrus-http:server id="httpServer2"
                        auto-start="false"
                        port="8082">
      <citrus-http:jms-endpoint-adapter destination-name="serverQueue"
                                        connection-factory="connectionFactory"
                                        timeout="2500"/>
    </citrus-http:server>

    <citrus-http:server id="httpServer3"
                        auto-start="false"
                        port="8083">
      <citrus-http:empty-response-adapter/>
    </citrus-http:server>

    <citrus-http:server id="httpServer4"
                        auto-start="false"
                        port="8084">
      <citrus-http:static-response-adapter>
        <citrus-http:payload>
          <![CDATA[
            <TestMessage>
              <Text>Hello!</Text>
            </TestMessage>
          ]]>
        </citrus-http:payload>
        <citrus-http:header>
          <citrus-http:element name="Operation" value="sayHello"/>
        </citrus-http:header>
      </citrus-http:static-response-adapter>
    </citrus-http:server>

    <citrus-http:server id="httpServer5"
                        auto-start="false"
                        port="8085">
      <citrus-http:timeout-producing-adapter/>
    </citrus-http:server>

    <citrus-http:server id="httpServer6"
                        auto-start="false"
                        port="8086">
      <citrus-http:endpoint-adapter ref="endpointAdapter"/>
    </citrus-http:server>

    <bean id="endpointAdapter" class="org.easymock.EasyMock" factory-method="createMock">
      <constructor-arg value="com.consol.citrus.endpoint.EndpointAdapter"/>
    </bean>

    <bean id="connectionFactory" class="org.easymock.EasyMock" factory-method="createMock">
      <constructor-arg value="javax.jms.ConnectionFactory"/>
    </bean>
</beans>