<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
    <testcase name="PlainTextValidationITest">
		<meta-info>
			<author>Christoph Deppisch</author>
			<creationdate>2010-01-12</creationdate>
			<status>FINAL</status>
			<last-updated-by>Christoph Deppisch</last-updated-by>
			<last-updated-on>2010-01-12T00:00:00</last-updated-on>
		</meta-info>
		
        <description>
			Send plain text as message payload. Here we use custom data format to send it over 
            HTTP to a server and receive simple plain text as response.
		</description>
		
        <actions>
            <parallel>
	            <send with="httpMessageSender">
	            	<message>
	            		<data>Hello, World!</data>
	            	</message>
	            </send>
              
                <sequential>
                    <receive with="httpRequestReceiver">
                        <message type="plaintext">
                            <data>Hello, World!</data>
                        </message>
                        <extract>
                            <header name="jms_messageId" variable="correlation_id"/>
                        </extract>
                    </receive>
    	            
    	            <send with="httpResponseSender">
    	            	<message>
    	            		<data>Hello, Citrus!</data>
    	            	</message>
    	            	<header>
    	           			<element name="HTTPStatusCode" value="200"/>
    	           			<element name="HTTPVersion" value="HTTP/1.1"/>
    	           			<element name="HTTPReasonPhrase" value="OK"/>
                            <element name="jms_correlationId" value="${correlation_id}"/>
    	           		</header>
    	            </send>
                </sequential>
            </parallel>
            
            <receive with="httpResponseReceiver">
            	<message type="plaintext">
                    <data>Hello, Citrus!</data>
            	</message>
            	<header>
           			<element name="HTTPStatusCode" value="200"/>
           			<element name="HTTPVersion" value="HTTP/1.1"/>
           			<element name="HTTPReasonPhrase" value="OK"/>
           		</header>
            </receive>
            
            <send with="httpMessageSender">
            	<message>
            		<data>Hello, World!</data>
            	</message>
            </send>
            
            <sleep time="2"/>
            
            <receive with="httpResponseReceiver">
            	<message type="plaintext">
                    <data></data>
                </message>
            	<header>
           			<element name="HTTPStatusCode" value="200"/>
           			<element name="HTTPVersion" value="HTTP/1.1"/>
           			<element name="HTTPReasonPhrase" value="OK"/>
           		</header>
            </receive>
        </actions>
    </testcase>
</spring:beans>