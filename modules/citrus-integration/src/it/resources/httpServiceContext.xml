<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">
	
    <bean id="httpServer" class="com.consol.citrus.http.HttpServer">
        <property name="port" value="8090"/>
        <property name="uri" value="/test"/>
        <property name="messageHandler">
            <bean class="com.consol.citrus.http.handler.JmsConnectingMessageHandler">
                <property name="destinationName" value="${jms.queue.http.request.forward}"/>
                <property name="replyDestinationName" value="${jms.queue.http.request.ack}"/>
                <property name="connectionFactory">
                    <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                        <property name="brokerURL" value="${jms.server.url}" />
                    </bean>
                </property>
                <property name="replyTimeout" value="2000"/>
            </bean>
        </property>
        <property name="deamon" value="false"/>
    </bean>
    
    <bean id="httpStandaloneServer" class="com.consol.citrus.http.HttpServer">
        <property name="port" value="8091"/>
        <property name="uri" value="/test"/>
        <property name="messageHandler">
            <bean class="com.consol.citrus.http.handler.XpathDispatchingMessageHandler">
                <property name="messageHandlerContext" value="message-handler-context.xml"/>
            </bean>
        </property>
        <property name="deamon" value="false"/>
    </bean>
    
	<bean id="defaultHttpMessageSender" class="com.consol.citrus.http.message.HttpMessageSender">
		<property name="requestUrl" value="http://localhost:8090/test" />
		<property name="requestMethod" value="POST" />
	</bean>
  
    <bean id="defaultStandaloneHttpMessageSender" class="com.consol.citrus.http.message.HttpMessageSender">
        <property name="requestUrl" value="http://localhost:8091/test" />
        <property name="requestMethod" value="POST" />
    </bean>
  
    <bean id="defaultHttpReplyMessageHandler" class="com.consol.citrus.http.message.HttpReplyMessageReceiver"/>
	
	<bean id="sendHttpRequest" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
		<property name="messageSender">
            <bean parent="defaultHttpMessageSender">
                <property name="replyMessageHandler" ref="defaultHttpReplyMessageHandler"/>
            </bean>
        </property>
	</bean>
  
    <bean id="sendStandaloneHttpRequest" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
        <property name="messageSender">
            <bean parent="defaultStandaloneHttpMessageSender">
                <property name="replyMessageHandler" ref="defaultHttpReplyMessageHandler"/>
            </bean>
        </property>
    </bean> 
	
	<bean id="receiveHttpResponse" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
		<property name="messageReceiver" ref="defaultHttpReplyMessageHandler"/>
	</bean>
	
	<bean id="receiveHttpRequest" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
		<property name="messageReceiver">
			<bean parent="defaultJmsMessageReceiver">
				<property name="destinationName" value="${jms.queue.http.request.forward}"/>
			</bean>
		</property>
	</bean>
	
	<bean id="sendHttpResponse" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
		<property name="messageSender">
			<bean parent="defaultJmsMessageSender">
				<property name="destinationName" value="${jms.queue.http.request.ack}"/>
			</bean>
		</property>
	</bean>
	
</beans>