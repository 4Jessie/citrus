<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
	<bean id="messageFactory" class="org.springframework.ws.soap.axiom.AxiomSoapMessageFactory"/>
	
	<bean id="defaultWebServiceMessageSender" class="com.consol.citrus.ws.WebServiceMessageSender" abstract="true">
        <constructor-arg ref="messageFactory"/>
        <property name="defaultUri" value="http://localhost:8081/ws-stub/MessageService/services"/>
    </bean>
    
    <bean id="defaultWebServiceReplyMessageHandler" class="com.consol.citrus.ws.WebServiceReplyMessageReceiver" abstract="true"/>
</beans>
