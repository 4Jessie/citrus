<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:citrus="http://www.consol.de/citrus/schema/config"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.consol.de/citrus/schema/config http://www.consol.de/citrus/schema/config/citrus-config-1.0.xsd">
	
	<citrus:jms-message-sender id="sendGetNumberRequest" destination-name="${jms.queue.async.in}"/>
  
    <citrus:jms-message-receiver id="receiveGetNumberRequest" destination-name="${jms.queue.async.in}"/>
	
    <citrus:jms-message-receiver id="receiveGetNumberResponse" destination-name="${jms.queue.async.out}"/>
	
	<citrus:jms-sync-message-sender id="sendGetCustomerRequest" 
                                    destination-name="${jms.queue.sync.in}"
                                    reply-handler="receiveGetCustomerResponse"
                                    reply-timeout="1000"/>
	
    <citrus:jms-reply-message-handler id="receiveGetCustomerResponse"/>
    
    <citrus:jms-sync-message-sender id="sendGetOrderRequest" 
                                    destination-name="${jms.queue.dummy.one.in}"
                                    reply-handler="receiveGetOrderRequestReply"
                                    reply-timeout="1000"/>
    
    <citrus:jms-reply-message-handler id="receiveGetOrderRequestReply"/>
    
    <citrus:jms-sync-message-receiver id="receiveGetOrderRequest" destination-name="${jms.queue.dummy.one.in}"/>
  
    <citrus:jms-reply-message-sender id="sendGetOrderRequestReply"
                                     reply-destination-holder="receiveGetOrderRequest"/>
    
	<bean id="receiveGetOrderRequestFilesystem" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
		<property name="messageReceiver">
			<bean parent="defaultJmsMessageReceiver">
				<property name="destinationName" value="${jms.queue.dummy.one.in}"/>
			</bean>
		</property>
		<property name="debugBasePath" value="/message-debug/"/>
	</bean>
	
    <bean id="sendWebServiceRequest" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
        <property name="messageSender">
            <bean parent="defaultWebServiceMessageSender">
                <property name="replyMessageHandler" ref="webServiceReplyHandler"/>
            </bean>
        </property>
    </bean>
    
    <bean id="webServiceReplyHandler" parent="defaultWebServiceReplyMessageHandler"/>
    <bean id="receiveWebServiceResponse" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
        <property name="messageReceiver">
            <ref bean="webServiceReplyHandler"/>
        </property>
    </bean>
    
    <bean id="sendWebServiceResponse" class="com.consol.citrus.actions.SendMessageBean" abstract="true">
        <property name="messageSender">
            <bean parent="defaultJmsMessageSender">
                <property name="destinationName" value="${jms.ws.stub.response}"/>
            </bean>
        </property>
    </bean>
    
    <bean id="receiveWebServiceRequest" class="com.consol.citrus.actions.ReceiveMessageBean" abstract="true">
        <property name="messageReceiver">
            <bean parent="defaultJmsMessageReceiver">
                <property name="destinationName" value="${jms.ws.stub.request}"/>
            </bean>
        </property>
    </bean>
    
	<bean id="receiveTimeout" class="com.consol.citrus.actions.ValidateJMSTimeoutBean" abstract="true">
		<property name="messageReceiver">
			<bean parent="defaultJmsMessageReceiver">
                <property name="destinationName" value="${jms.queue.dummy}"/>
            </bean>
		</property>
	</bean>
	
	<bean id="databaseAccess" class="com.consol.citrus.actions.ExecuteSqlBean" abstract="true">
		<property name="dbService" ref="dbService"/>
	</bean>
	
	<bean id="executePLSQL" class="com.consol.citrus.actions.ExecutePLSQLBean" abstract="true">
		<property name="dbService" ref="dbService"/>
	</bean>

	<bean id="databaseQuery" class="com.consol.citrus.actions.SqlQueryBean" abstract="true">
		<property name="dbService" ref="dbService"/>
		<property name="maxRetries" value="5"/>
		<property name="retryPauseInMs" value="1000"/>
	</bean>

	<bean id="purgeJmsQueues" class="com.consol.citrus.actions.PurgeJmsQueuesBean">
		<property name="queueConnectionFactory">
			<ref bean="connectionFactory"></ref>
		</property>
		<property name="queueNames">
			<list>
				<value>${jms.queue.sync.in}</value>
				<value>${jms.queue.sync.out}</value>
				<value>${jms.queue.async.in}</value>
				<value>${jms.queue.async.out}</value>
				<value>${jms.queue.dummy}</value>
				<value>${jms.queue.dummy.one.in}</value>
				<value>${jms.queue.dummy.one.out}</value>
				<value>${jms.queue.dummy.two.in}</value>
				<value>${jms.queue.dummy.two.out}</value>
				<value>${jms.queue.dummy.three.in}</value>
				<value>${jms.queue.dummy.three.out}</value>
				<value>${jms.queue.http.request.forward}</value>
				<value>${jms.queue.http.request.ack}</value>
				
				<value>${jms.ws.stub.request}</value>
				<value>${jms.ws.stub.response}</value>
			</list>
		</property>
	</bean>
	
	<bean id="testCase" class="com.consol.citrus.TestCase" abstract="true" />
	
	<bean id="timeWatcher" class="com.consol.citrus.actions.TimeWatcherBean">
	 	<property name="description" value="TimeWatcherBean" />
	</bean>
			
	<bean id="waitDelay" class="com.consol.citrus.actions.DelayBean" abstract="true">
		<property name="delay" value="5" />
	</bean>
	
	<bean id="runTrigger" class="com.consol.citrus.actions.ClassRunnerBean" abstract="true" />
	
	<bean id="echo" class="com.consol.citrus.actions.EchoBean" />
	
	<bean id="infoBean" class="com.consol.citrus.actions.InfoBean" />
	
	<bean id="settingVariables" class="com.consol.citrus.actions.SetVariablesBean" />
	
</beans>