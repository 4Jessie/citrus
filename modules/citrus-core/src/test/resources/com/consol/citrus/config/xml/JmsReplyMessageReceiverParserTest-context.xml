<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:citrus="http://www.citrusframework.org/schema/config" 
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                            http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">
    
    <citrus:jms-reply-message-handler id="jmsReplyMessageReceiver1"/>

    <citrus:jms-reply-message-handler id="jmsReplyMessageReceiver2"
                                      actor="testActor"/>
    
    <citrus:jms-reply-message-handler id="jmsReplyMessageReceiver3"
                                      polling-interval="550"/>
                                          
    <citrus:actor id="testActor" name="TESTACTOR" disabled="false"/>
</beans>