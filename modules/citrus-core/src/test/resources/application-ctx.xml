<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	 
	<aop:aspectj-autoproxy/>
  
    <!-- Used for autowiring -->
    <context:annotation-config/>
    
    <context:load-time-weaver/>
	
    <bean class="org.springframework.beans.factory.aspectj.AnnotationBeanConfigurerAspect"/>
	<bean class="com.consol.citrus.aop.TestActionExecutionAspect"/>
    <bean class="com.consol.citrus.aop.StoreMessageInterceptorAspect"/>
	 
	<bean name="propertyLoader" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>test.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="messageValidator" class="com.consol.citrus.validation.DefaultXMLMessageValidator"/>
	
	<bean name="testCaseParser" class="com.consol.citrus.script.GroovyTestCaseParser"/>
	
    <bean class="com.consol.citrus.context.TestContext" scope="prototype"/>
    
    <bean class="com.consol.citrus.variable.GlobalVariables">
        <property name="variables">
            <map>
                <entry key="jdbc.url" value="${jdbc.url}"/>
            </map>
        </property>
    </bean>
    
    <bean class="com.consol.citrus.variable.GlobalVariablesPropertyLoader">
        <property name="propertyFiles">
            <list>
                <value>classpath:test.properties</value>
            </list>
        </property>
    </bean>
    
    <bean class="com.consol.citrus.functions.FunctionRegistry"/>
    
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>test</value>
				<value>version</value>			
			</list>
		</property>
	</bean>
</beans>
