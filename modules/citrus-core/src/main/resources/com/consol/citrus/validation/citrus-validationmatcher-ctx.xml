<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

  <citrus:validation-matcher-library id="citrusValidationMatcherLibrary" prefix="">
    <citrus:matcher name="equalsIgnoreCase" class="com.consol.citrus.validation.matcher.core.EqualsIgnoreCaseValidationMatcher"/>
    <citrus:matcher name="contains" class="com.consol.citrus.validation.matcher.core.ContainsValidationMatcher"/>
    <citrus:matcher name="containsIgnoreCase" class="com.consol.citrus.validation.matcher.core.ContainsIgnoreCaseValidationMatcher"/>
    <citrus:matcher name="greaterThan" class="com.consol.citrus.validation.matcher.core.GreaterThanValidationMatcher"/>
    <citrus:matcher name="lowerThan" class="com.consol.citrus.validation.matcher.core.LowerThanValidationMatcher"/>
    <citrus:matcher name="startsWith" class="com.consol.citrus.validation.matcher.core.StartsWithValidationMatcher"/>
    <citrus:matcher name="endsWith" class="com.consol.citrus.validation.matcher.core.EndsWithValidationMatcher"/>
    <citrus:matcher name="isNumber" class="com.consol.citrus.validation.matcher.core.IsNumberValidationMatcher"/>
    <citrus:matcher name="matches" class="com.consol.citrus.validation.matcher.core.MatchesValidationMatcher"/>
    <citrus:matcher name="matchesDatePattern" class="com.consol.citrus.validation.matcher.core.DatePatternValidationMatcher"/>
    <citrus:matcher name="matchesXml" class="com.consol.citrus.validation.matcher.core.XmlValidationMatcher"/>
    <citrus:matcher name="isWeekday" class="com.consol.citrus.validation.matcher.core.WeekdayValidationMatcher"/>
    <citrus:matcher name="variable" class="com.consol.citrus.validation.matcher.core.CreateVariableValidationMatcher"/>
  </citrus:validation-matcher-library>

</beans>