<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:ciitrus="http://www.citrusframework.org/schema/config"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

  <ciitrus:function-library id="citrusFunctionLibrary" prefix="citrus:">
    <citrus:function name="randomNumber" class="com.consol.citrus.functions.core.RandomNumberFunction"/>
    <citrus:function name="randomString" class="com.consol.citrus.functions.core.RandomStringFunction"/>
    <citrus:function name="concat" class="com.consol.citrus.functions.core.ConcatFunction"/>
    <citrus:function name="currentDate" class="com.consol.citrus.functions.core.CurrentDateFunction"/>
    <citrus:function name="substring" class="com.consol.citrus.functions.core.SubstringFunction"/>
    <citrus:function name="stringLength" class="com.consol.citrus.functions.core.StringLengthFunction"/>
    <citrus:function name="translate" class="com.consol.citrus.functions.core.TranslateFunction"/>
    <citrus:function name="substringBefore" class="com.consol.citrus.functions.core.SubstringBeforeFunction"/>
    <citrus:function name="substringAfter" class="com.consol.citrus.functions.core.SubstringAfterFunction"/>
    <citrus:function name="round" class="com.consol.citrus.functions.core.RoundFunction"/>
    <citrus:function name="floor" class="com.consol.citrus.functions.core.FloorFunction"/>
    <citrus:function name="ceiling" class="com.consol.citrus.functions.core.CeilingFunction"/>
    <citrus:function name="upperCase" class="com.consol.citrus.functions.core.UpperCaseFunction"/>
    <citrus:function name="lowerCase" class="com.consol.citrus.functions.core.LowerCaseFunction"/>
    <citrus:function name="average" class="com.consol.citrus.functions.core.AvgFunction"/>
    <citrus:function name="minimum" class="com.consol.citrus.functions.core.MinFunction"/>
    <citrus:function name="maximum" class="com.consol.citrus.functions.core.MaxFunction"/>
    <citrus:function name="sum" class="com.consol.citrus.functions.core.SumFunction"/>
    <citrus:function name="absolute" class="com.consol.citrus.functions.core.AbsoluteFunction"/>
    <citrus:function name="randomEnumValue" class="com.consol.citrus.functions.core.RandomEnumValueFunction"/>
    <citrus:function name="randomUUID" class="com.consol.citrus.functions.core.RandomUUIDFunction"/>
    <citrus:function name="cdataSection" class="com.consol.citrus.functions.core.CreateCDataSectionFunction"/>
    <citrus:function name="escapeXml" class="com.consol.citrus.functions.core.EscapeXmlFunction"/>
    <citrus:function name="encodeBase64" class="com.consol.citrus.functions.core.EncodeBase64Function"/>
    <citrus:function name="decodeBase64" class="com.consol.citrus.functions.core.DecodeBase64Function"/>
    <citrus:function name="digestAuthHeader" class="com.consol.citrus.functions.core.DigestAuthHeaderFunction"/>
    <citrus:function name="localHostAddress" class="com.consol.citrus.functions.core.LocalHostAddressFunction"/>
    <citrus:function name="changeDate" class="com.consol.citrus.functions.core.ChangeDateFunction"/>
  </ciitrus:function-library>

</beans>