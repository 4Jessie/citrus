<assembly>
  <id>with-dependencies</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <includeSiteDirectory>false</includeSiteDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>com.consol.citrus:citrus-core</include>
      </includes>
      <binaries>
        <outputDirectory>dist</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.consol.citrus:citrus-ws</include>
        <include>com.consol.citrus:citrus-http</include>
        <include>com.consol.citrus:citrus-tibco</include>
        <include>com.consol.citrus:citrus-adapter</include>
      </includes>
      <binaries>
        <outputDirectory>dist</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.consol.citrus:citrus-samples-flightbooking</include>
      </includes>
      <binaries>
        <outputDirectory>samples/flightbooking/lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>samples/lib</outputDirectory>
            <excludes>
                <exclude>com.consol.citrus:citrus-core</exclude>
                <exclude>com.consol.citrus:citrus-adapter</exclude>
                <exclude>com.consol.citrus:citrus-http</exclude>
                <exclude>org.springframework:spring-core</exclude>
                <exclude>org.springframework:spring-beans</exclude>
                <exclude>org.springframework:spring-context</exclude>
                <exclude>org.springframework:spring-aop</exclude>
                <exclude>org.springframework:spring-tx</exclude>
                <exclude>org.springframework:spring-oxm</exclude>
                <exclude>org.springframework.integration:spring-integration-core</exclude>
                <exclude>aopalliance:aopalliance</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>org.apache.ant:ant</exclude>
                <exclude>org.apache.ant:ant-launcher</exclude>
                <!-- sample specific already in subfolder lib -->
                <exclude>org.springframework:spring-orm</exclude>
                <exclude>org.hibernate:hibernate-entitymanager</exclude>
                <exclude>javax.persistence:persistence-api</exclude>
            </excludes>
            <useTransitiveFiltering>true</useTransitiveFiltering>
          </dependencySet>
          <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>samples/flightbooking/lib</outputDirectory>
            <excludes>
                <exclude>org.springframework:spring-tx</exclude>
            </excludes>
            <includes>
                <include>org.hibernate:hibernate-entitymanager</include>
                <include>javax.persistence:persistence-api</include>
                <include>org.springframework:spring-orm</include>
            </includes>
            <useTransitiveFiltering>true</useTransitiveFiltering>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.consol.citrus:citrus-samples-greeting</include>
      </includes>
      <binaries>
        <outputDirectory>samples/greeting/lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>samples/lib</outputDirectory>
            <excludes>
                <exclude>com.consol.citrus:citrus-core</exclude>
                <exclude>aopalliance:aopalliance</exclude>
                <exclude>org.springframework:spring-core</exclude>
                <exclude>org.springframework:spring-beans</exclude>
                <exclude>org.springframework:spring-context</exclude>
                <exclude>org.springframework:spring-aop</exclude>
                <exclude>org.springframework:spring-tx</exclude>
                <exclude>org.springframework:spring-oxm</exclude>
                <exclude>org.springframework.integration:spring-integration-core</exclude>
                <exclude>org.springframework.integration:spring-integration-jms</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>org.apache.ant:ant</exclude>
                <exclude>org.apache.ant:ant-launcher</exclude>
                <exclude>commons-logging:commons-logging</exclude>
            </excludes>
            <useTransitiveFiltering>true</useTransitiveFiltering>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <!-- FlightBooking sample -->
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-flightbooking/src/main/script</directory>
      <outputDirectory>samples/flightbooking</outputDirectory>
      <includes>
          <include>*.bat</include>
          <include>*.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0744</fileMode>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-flightbooking/src/citrus/resources</directory>
      <outputDirectory>samples/flightbooking/src/citrus/resources</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-flightbooking/target/test-classes</directory>
      <outputDirectory>samples/flightbooking/src/citrus/java</outputDirectory>
      <includes>
          <include>**/*.java</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-flightbooking/src/citrus/tests</directory>
      <outputDirectory>samples/flightbooking/src/citrus/tests</outputDirectory>
      <includes>
          <include>**/*.xml</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    
    <!-- Greeting sample -->
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-greeting/src/main/script</directory>
      <outputDirectory>samples/greeting</outputDirectory>
      <includes>
          <include>*.bat</include>
          <include>*.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0744</fileMode>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-greeting/src/citrus/resources</directory>
      <outputDirectory>samples/greeting/src/citrus/resources</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-greeting/target/test-classes</directory>
      <outputDirectory>samples/greeting/src/citrus/java</outputDirectory>
      <includes>
          <include>**/*.java</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-samples/modules/citrus-samples-greeting/src/citrus/tests</directory>
      <outputDirectory>samples/greeting/src/citrus/tests</outputDirectory>
      <includes>
          <include>**/*.xml</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    
    <!-- Reference documentation -->
    <fileSet>
      <directory>target/doc/html</directory>
      <outputDirectory>docs/reference/html</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/doc/html_single</directory>
      <outputDirectory>docs/reference/htmlsingle</outputDirectory>
    </fileSet>
    
    <!-- Source archives -->
    <fileSet>
        <directory>modules/citrus-core/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-adapter/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-tibco/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-http/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-ws/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-samples/modules/citrus-samples-flightbooking/target</directory>
        <outputDirectory>samples/flightbooking/src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-samples/modules/citrus-samples-greeting/target</directory>
        <outputDirectory>samples/greeting/src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    
    <!-- License, readme, notice -->
    <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory></outputDirectory>
        <includes>
          <include>README.txt</include>
          <include>LICENSE.txt</include>
          <include>NOTICE.txt</include>
        </includes>
    </fileSet>
  </fileSets>
  <files>
    <!-- PDF reference documentation -->
    <file>
      <source>target/doc/pdf/citrus-reference.pdf</source>
      <outputDirectory>docs/reference/pdf</outputDirectory>
    </file>
    <!-- Samples ant build scripts -->
    <file>
      <source>modules/citrus-samples/src/main/script/build.xml</source>
      <outputDirectory>samples/flightbooking</outputDirectory>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>modules/citrus-samples/src/main/script/build.xml</source>
      <outputDirectory>samples/greeting</outputDirectory>
      <lineEnding>unix</lineEnding>
    </file>
    <!-- Samples overall readme -->
    <file>
      <source>modules/citrus-samples/README.txt</source>
      <outputDirectory>samples</outputDirectory>
      <lineEnding>unix</lineEnding>
    </file>
  </files>
</assembly>