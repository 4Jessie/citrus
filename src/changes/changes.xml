  <body>
    <release version="1.0" date="25.09.2009" description="OpenSource">
        <action dev="deppisch" type="update">
          Switch to Maven build system.
        </action>
        <action dev="deppisch" type="update">
          Refactoring of core code.
        </action>
        <action dev="deppisch" type="update">
          Updating documentation.
        </action>
        <action dev="deppisch" type="remove">
          Removed support for legacy functionalities (e.g. legacy variable syntax, xpath functions, get current date, etc.)
        </action>
    </release>
    
    <release version="0.9.9" date="26.08.2008" description="New features">
        <action dev="deppisch" type="add">
          Added groovy script support.
        </action>
        <action dev="deppisch" type="add">
          Dump received messages to file system for debugging.
        </action>
    </release>
    
    <release version="0.9.8" date="05.08.2008" description="Database retires">
        <action dev="deppisch" type="update">
          In case database queries fail offer automatic retry.
        </action>
    </release>
    
    <release version="0.9.7" date="23.06.2008" description="Parallel testing">
        <action dev="deppisch" type="add">
          Implemented multi threading in order to run tests in parallel.
        </action>
    </release>
    
    <release version="0.9.6" date="18.06.2008" description="Further refactoring">
    </release>
    
    <release version="0.9.5" date="14.05.2008" description="WebService stub">
        <action dev="deppisch" type="add">
          Implemented generic WebService stub receiving messages using SOAP.
        </action>
    </release>
    
    <release version="0.9.4" date="26.03.2008" description="Refactoring">
        <action dev="deppisch" type="add">
          Moved validation code to validator classes.
        </action>
        <action dev="deppisch" type="add">
          Introduced message interfaces.
        </action>
    </release>
    
    <release version="0.9.3" date="05.02.2008" description="New features">
        <action dev="deppisch" type="add">
          Added iterations executing test actions in loops.
        </action>
        <action dev="deppisch" type="add">
          Added custom function support using Java fuction libraries.
        </action>
    </release>
    
    <release version="0.9.2" date="04.12.2007" description="Bugfix release">
        <action dev="deppisch" type="fix">
          Fixed unit tests.
        </action>
    </release>
    
    <release version="0.9.1" date="09.10.2007" description="Http server implementation">
        <action dev="deppisch" type="add">
          Implemented generic Http server receiving messages using http protocol. 
        </action>
        <action dev="deppisch" type="add">
          New features. 
        </action>
    </release>
    
    <release version="0.9.0" date="29.07.2007" description="Spring 2.0 upgrade">
        <action dev="deppisch" type="update">
          Upgrade to Spring 2.0 features.
        </action>
        <action dev="deppisch" type="add">
          Added custom XML schema as test-writing syntax.
        </action>
    </release>
    
    <release version="0.8.10" date="22.03.2007" description="Deprecated code">
